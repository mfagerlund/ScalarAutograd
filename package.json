{
  "name": "scalar-autograd",
  "version": "0.1.8",
  "description": "Scalar-based reverse-mode automatic differentiation in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "demos/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mfagerlund/ScalarAutograd.git"
  },
  "keywords": [
    "autograd",
    "reverse-mode",
    "automatic-differentiation",
    "scalar",
    "typescript"
  ],
  "author": "Mattias Fagerlund <mattias.fagerlund@carretera.se>",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@webgpu/types": "^0.1.65",
    "webgpu": "^0.3.8"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.15",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "ts-node": "^10.0.0",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --globals",
    "test:verbose": "cross-env VERBOSE=true vitest run --globals",
    "prepare": "husky",
    "watch:test": "node .claude/test-watcher.js",
    "watch:build": "node .claude/build-watcher.js",
    "watch:vite": "node .claude/vite-watcher.js",
    "watch:demo-ts": "node .claude/demo-typecheck-watcher.js"
  }
}
